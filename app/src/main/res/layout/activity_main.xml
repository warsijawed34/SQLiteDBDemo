<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sqlitedemo.com.sqlitedemo.MainActivity">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="User name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:imeOptions="actionNext"
        android:id="@+id/etName" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Password"
        android:imeOptions="actionDone"
        android:layout_below="@+id/etName"
        android:layout_marginTop="29dp"
        android:id="@+id/etPassword" />

    <Button
        android:text="Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPassword"
        android:layout_marginTop="30dp"
        android:textAllCaps="false"
        android:id="@+id/btnLogin" />

    <Button
        android:text="Get All Details"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLogin"
        android:layout_marginTop="10dp"
        android:id="@+id/btnGetAllDetails" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Enter User name"
        android:layout_marginTop="10dp"
        android:imeOptions="actionNext"
        android:id="@+id/etEnterUserName"
        android:layout_below="@+id/btnGetAllDetails"/>

    <Button
        android:text="Get Some Details"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etEnterUserName"
        android:layout_marginTop="10dp"
        android:id="@+id/btnGetSomeDetails" />
    <Button
        android:text="Update"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnGetSomeDetails"
        android:layout_marginTop="10dp"
        android:id="@+id/btnUpdate" />
    <Button
        android:text="Delete"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnGetSomeDetails"
        android:layout_toRightOf="@+id/btnUpdate"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/btnDelete" />
</RelativeLayout>
